<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="You Entered..."
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="15dp"/>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Login Data..."
        android:textSize="18dp"
        android:gravity="center"
        android:layout_margin="15dp"/>

    <TextView android:id="@+id/txtEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:id="@+id/txtPass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Sign up Data..."
        android:textSize="18dp"
        android:gravity="center"
        android:layout_margin="15dp"/>

    <TextView android:id="@+id/txtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:id="@+id/txtEmail1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:id="@+id/txtContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:id="@+id/txtGender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:id="@+id/txtHobby"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <TextView android:id="@+id/txtPass1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18dp"/>

    <Button android:id="@+id/btnClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="Close"/>

</LinearLayout>
